{% extends 'baseAdmin.html.twig' %}

{% block body %}
<section class="new containerBody">
    <div class="container">
        <div class="new-body">
            <table class="table table-striped table-condensed text-center">
                <thead class="thead-dark text-center">
                    <tr>
                        <th colspan="3">Articles</th>
                    </tr>
                </thead>

                <tbody>
                    {% if rss_load == true %}
                        {% for rssItem in rss_load.channel.item %}
                            <tr>
                                <td width="15%"><img class="img-fluid" src="{{ rssItem.enclosure.attributes.url }}"></td>
                                <td class="text-justify" width="70%"><a href="{{rssItem.link }}" target="_blank">{{ rssItem.title }}</a></td>
                                <td id="newsPubDate" width="15%">{{ rssItem.pubDate }}</td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td class="text-center">Aucune connection internet détectée.<br>Veuillez vous connectez à un réseau pour visionné les dernières actualités.</td>
                        </tr>
                    {% endif %}    
                </tbody>
            </table>
        </div>
    </div>
</section>
{% endblock %}
