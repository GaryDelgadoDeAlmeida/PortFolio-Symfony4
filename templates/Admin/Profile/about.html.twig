{% extends 'baseAdmin.html.twig' %}

{% block body %}

<section class="container">
    {% if message != null %}
        <div class="{{ message.class }}">
            <span>{{message.content}}</span>
        </div>
    {% endif %}
    
    {{ form_start(form, {'method': 'POST'}) }}
        <div class="row">
            <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                {{ form_label(form.img) }}
                {{ form_widget(form.img) }}
            </div>
            <div class="form-group col-md-12 col-lg-12 wow fadeInUp animated">
                {{ form_label(form.intro) }}
                {{ form_widget(form.intro) }}
            </div>
        </div>
    {{ form_end(form, {'method': 'POST'}) }}
</section>
    
{% endblock %}