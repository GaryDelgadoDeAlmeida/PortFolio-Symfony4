{% extends 'baseAdmin.html.twig' %}

{% block body %}
<div class="admin-profile">
    <h1>Profile</h1>

    <div class="profile">
        <div class="profile-image">
            <img src="{{ asset('content/images/me.jpg') }}" alt="" />
            <p>
                <span class="firstname">Garry</span>
                <span class="lastname">DE ALMEIDA</span>
            </p>
        </div>

        <div class="profile-infos">
            {% if message != null %}
                <div class="{{ message.class }}">
                    <span>{{message.content}}</span>
                </div>
            {% endif %}
            
            {{ form_start(form, {'action': path('adminProfile'), 'method': 'POST'}) }}

                <div class="profile-form">
                    <div class="info-field">
                        {{ form_label(form.firstName) }}
                        {{ form_widget(form.firstName, {"attr": {"maxLength": 100}}) }}
                    </div>
                    
                    <div class="info-field">
                        {{ form_label(form.lastName) }}
                        {{ form_widget(form.lastName, {"attr": {"maxLength": 100}}) }}
                    </div>
                    
                    <div class="info-field">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email, {"attr": {"maxLength": 255}}) }}
                    </div>
                    
                    <div class="info-field">
                        {{ form_label(form.phoneNumber) }}
                        {{ form_widget(form.phoneNumber) }}
                    </div>
                    
                    <div class="info-field">
                        {{ form_label(form.address) }}
                        {{ form_widget(form.address, {"attr": {"maxLength": 255}}) }}
                    </div>
                    
                    <div class="info-field">
                        {{ form_label(form.postalCode) }}
                        {{ form_widget(form.postalCode) }}
                    </div>
                    
                    <div class="info-field">
                        {{ form_label(form.city) }}
                        {{ form_widget(form.city) }}
                    </div>
                    
                    <div class="info-field">
                        {{ form_label(form.password) }}
                        {{ form_widget(form.password) }}
                    </div>
                    
                    <div class="info-field">
                        <label html="description">Description</label>
                        <textarea name="description"></textarea>
                    </div>

                    <div class="info-edit">
                        {{ form_widget(form.submit, {"attr": {"class": "btn btn-primary"}}) }}
                    </div>
                </div>
            {{ form_end(form, {'action': path('adminProfile'), 'method': 'POST'}) }}
        </div>
    </div>
</div>
    
{% endblock %}
