{% extends 'baseAdmin.html.twig' %}

{% block page_content %}
    <div class="admin-portfolio">
        <a href="{{ path("admin_project_new") }}">
            <button class="btn btn-green">Add a work</button>
        </a>
        
        <div class="portfolio-wrapper">
            {% if projects != [] %}
                <div class="overlay-row">
                    {% for project in projects %}
                        <div class="overlay-card">
                            <div class="overlay-image">
                                <a href="{{ path("admin_project_show", {"id": project.id}) }}">
                                    <img class="image" src="{{ asset(project.imgPath) }}" alt="{{ project.name }}"/>
                                    <div class="hover">
                                        <div class="text">
                                            <h3 class="project-title">{{ project.name }}</h3>
                                            <span class="project-small-text">{{ project.type }}</span>
                                        </div>
                                        {# <div class="tools">
                                            {% for tech in project.skills %}
                                                <span>{{ tech.skill }}</span>
                                            {% endfor %}
                                        </div> #}
                                    </div>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="notification information">
                    <div class="icon">
                        <img src="{{ asset("/content/images/svg/informationmark-gray.svg") }}" alt="icon" />
                    </div>
                    
                    <div class="message">
                        <span>Il n'y a aucun projet enregistr√© dans la database.</span>
                    </div>
                </div>
                <div>&nbsp;</div>
            {% endif %}

            {# Pagination #}
            {% if total_page > 1 %}
                <div class="pagination">
                    {% if page - 1 >= 1  %}
                        <div class="first-page">
                            <a href="{{ path("admin_project_index") }}"><img src="{{ asset("/content/images/svg/double-angle-left.svg") }}" alt={"double-angle-left"} /></a>
                        </div>

                        <div class="previous-page">
                            <a href="{{ path("admin_project_index_by_page", {'page': (page - 1)}) }}">{{ page - 1 }}</a>
                        </div>
                    {% endif %}

                    <div class="current-page">
                        <span>{{ page }}</span>
                    </div>
                    
                    {% if page + 1 <= total_page  %}
                        <div class="next-page">
                            <a href="{{ path("admin_project_index_by_page", {'page': (page + 1)}) }}">{{ page + 1 }}</a>
                        </div>

                        <div class="last-page">
                            <a href="{{ path("admin_project_index_by_page", {'page': (total_page)}) }}"><img src="{{ asset("/content/images/svg/double-angle-right.svg") }}" alt={"double-angle-right"} /></a>
                        </div>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
