{% extends 'baseAdmin.html.twig' %}
{% trans_default_domain 'user' %}

{% block page_content %}
    <div class="admin-portfolio">
        <a class="btn btn-primary" href="{{ path("admin_project_index") }}">
            <span>{{ "return"|trans }}</span>
        </a>

        <div class="portfolio-wrapper portfolio-single">
            <h1>{{ project.name }}</h1>

            <div class="single-folio">
                <div class="introduction">
                    <div class="hero">
                        <img src="{{ asset(project.imgPath) }}" alt="{{ project.name }}" />
                    </div>
                    <div class="banner">
                        <div class="project-infos">
                            <h2 class="title">{{ project.name }}</h2>

                            <div class="infos">
                                <ul>
                                    <li><span>{{ "project.client"|trans }} :</span> {% if project.clientName != "" %}{{ project.clientName }}{% else %}N/A{% endif %}</li>
                                    <li><span>{{ "project.created_at"|trans }} :</span> {{ project.createdAt|date("d M Y") }}</li>
                                    <li><span>{{ "project.production_link"|trans }} :</span> 
                                        {% if project.siteLink != "" %}
                                            <a href="{{ project.siteLink }}" target="_blank">{{ project.name }}</a>
                                        {% else %}
                                            N/A
                                        {% endif %}
                                    </li>
                                    <li><span>{{ "project.github_link"|trans }} :</span> <a href="{{ project.gitHubLink }}" target="_blank">{{ project.name }}</a></li>
                                    <li><span>{{ "project.type"|trans }} :</span> {{ project.type }}</li>
                                    <li>
                                        <span>{{ "project.tools"|trans }} :</span>
                                        <ul class="badge-list g-5px">
                                            {% for skill in skills %}
                                                <li class="badge badge-primary">{{ skill }}</li>
                                            {% endfor %}
                                        </ul>
                                    </li>
                                </ul>
                            </div>

                            <div class="actions">
                                <a href="{{ path("admin_project_edit", {"id": project.id}) }}">
                                    <button class="btn btn-primary">
                                        <img src="{{ asset("/content/images/svg/pencil-white.svg") }}" alt="" />
                                    </button>
                                </a>
                                <a href="{{ path("admin_project_remove", {"id": project.id}) }}">
                                    <button class="btn btn-red">
                                        <img src="{{ asset("/content/images/svg/trash-white.svg") }}" alt="" />
                                    </button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="details">
                    <h2>{{ "project.description"|trans }}</h2>
                    <p>{{ project.description }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}