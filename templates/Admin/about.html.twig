{% extends 'baseAdmin.html.twig' %}

{% block body %}

<section class="container">
    {% if message != '' %}
        <div class="{{ message.class }}">
            <span>{{message.message}}</span>
        </div>
    {% endif %}
    
    {{ form_start(form, {'action': path('adminAbout'), 'method': 'POST'}) }}
        <div class="row">
            <div class="form-group col-md-6 col-lg-6 wow fadeInUp animated">
                {{ form_label(form.firstName) }}
                {{ form_widget(form.firstName) }}
            </div>
            <div class="form-group col-md-6 col-lg-6 wow fadeInUp animated">
                {{ form_label(form.lastName) }}
                {{ form_widget(form.lastName) }}
            </div>
            <div class="form-group wow fadeInUp animated col-md-4 col-lg-4">
                {{ form_label(form.address) }}
                {{ form_widget(form.address) }}
            </div>
            <div class="form-group wow fadeInUp animated col-md-4 col-lg-4">
                {{ form_label(form.postalCode) }}
                {{ form_widget(form.postalCode) }}
            </div>
            <div class="form-group wow fadeInUp animated col-md-4 col-lg-4">
                {{ form_label(form.city) }}
                {{ form_widget(form.city) }}
            </div>
            <div class="form-group wow fadeInUp animated col-md-12 col-lg-12">
                {{ form_label(form.phoneNumber) }}
                {{ form_widget(form.phoneNumber) }}
            </div>
            <div class="form-group wow fadeInUp animated col-md-12 col-lg-12">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
            </div>
            <div class="form-group wow fadeInUp animated col-md-12 col-lg-12">
                {{ form_label(form.password) }}
                {{ form_widget(form.password) }}
            </div>
        </div>
    {{ form_end(form, {'action': path('adminAbout'), 'method': 'POST'}) }}
</section>
    
{% endblock %}
