{% extends 'baseAdmin.html.twig' %}
{% trans_default_domain 'user' %}

{% block page_content %}
    <div class="admin-witnesses">
        <a href="{{ path("adminAddWitness") }}">
            <button class="btn btn-green">Add a witness</button>
        </a>

        <table class="witnesses-table">
            <thead>
                <tr>
                    <th class="column-company">Company</th>
                    <th class="column-contact">Contact</th>
                    <th class="column-comment">Comment</th>
                    <th class="column-action"></th>
                </tr>
            </thead>
            <tbody>
                {% for witness in witnesses %}
                    <tr class="witness-item">
                        <td class="-company txt-center">{{ witness.company }}</td>
                        <td class="-contact txt-center">{{ witness.getFullName() }}</td>
                        <td class="-comment">{{ witness.comment|slice(0, 80) }} ...</td>
                        <td class="-action">
                            <a href="{{ path("adminEditWitness", {"id": witness.id}) }}">
                                <img src="{{ asset("/content/images/svg/eye.svg") }}" alt="pencil" />
                            </a>
                            <button id="removeWitness" data-url="{{ path("adminRemoveWitness", {"id": witness.id}) }}">
                                <img src="{{ asset("/content/images/svg/close-red.svg") }}" alt="close-icon" />
                            </button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td class="txt-center" colspan="5">{{ "witness.no_witness"|trans }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {% if offset >= 1 and offset < nbrOffsets %}
            <div class="pagination">
                {% if offset - 1 >= 1 %}
                    <div class="first-page">
                        <a href="{{ path("adminWitnesses") }}"><img src="{{ asset("/content/images/svg/double-angle-left.svg") }}" alt="double-angle-left" /></a>
                    </div>
                    
                    <div class="previous-page">
                        <a href="{{ path("adminWitnessesByPage", {offset: offset - 1}) }}"><img src="{{ asset("/content/images/svg/angle-left.svg") }}" alt="angle-left" /></a>
                    </div>
                
                    <div class="previous-page">
                        <a href="{{ path("adminWitnessesByPage", {offset: offset - 1}) }}">{{ offset - 1 }}</a>
                    </div>
                {% endif %}

                <div class="current-page">
                    <span>{{ offset }}</span>
                </div>
                
                {% if offset + 1 <= nbrOffsets %}
                    <div class="next-page">
                        <a href="{{ path("adminWitnessesByPage", {offset: offset + 1}) }}">{{ offset + 1 }}</a>
                    </div>
                    
                    <div class="next-page">
                        <a href="{{ path("adminWitnessesByPage", {offset: offset + 1}) }}"><img src="{{ asset("/content/images/svg/angle-right.svg") }}" alt="angle-right" /></a>
                    </div>
                    
                    <div class="last-page">
                        <a href="{{ path("adminWitnessesByPage", {offset: nbrOffsets}) }}"><img src="{{ asset("/content/images/svg/double-angle-right.svg") }}" alt="double-angle-right" /></a>
                    </div>
                {% endif %}
            </div>
        {% endif %}
    </div>
{% endblock %}