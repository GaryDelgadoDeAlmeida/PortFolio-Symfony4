{% extends 'baseAdmin.html.twig' %}

{% block page_content %}
    <a class="btn btn-primary" href="{{ path('admin_contact_index') }}">
        <span>Return</span>
    </a>

    <div class="admin-email-single"> 
        <div class="email-single">
            <div class="sender">
                <div class="avatar">
                    <img src="{{ asset("/content/images/me.jpg") }}" alt="" />
                </div>
                
                <div class="info">
                    <span><b>{{ mail.senderFullName }}</b> ({{ mail.senderEmail }})</span>
                    <span>{{ mail.createdAt|date("d/m/Y") }}</span>
                </div>

                <div class="actions">
                    <a href="{{ path("admin_contact_remove", {"id": mail.id}) }}">
                        <img src="{{ asset("/content/images/svg/trash.svg") }}" alt="trash" />
                    </a>
                </div>
            </div>

            <div class="object">
                <h3>Object : {{ mail.emailSubject }}</h3>
            </div>
            
            <div class="content">
                <p>{{ mail.emailContent|raw }}</p>
            </div>
        </div>
    </div>
{% endblock %}