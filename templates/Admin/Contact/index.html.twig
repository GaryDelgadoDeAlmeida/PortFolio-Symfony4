{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="admin-email">
        <h1>Inbox</h1>

        <div class="emails">
            <table>
                <thead>
                    <tr>
                        <th>Object</th>
                        <th>Content</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% if list_mail != null %}
                        {% for mail in list_mail %}
                            <tr class="email-card {{ mail.isRead == false ? "unread" : "" }}">
                                <td>{{ mail.emailSubject }}</td>
                                <td>{{ mail.emailContent|slice(0, 100) }}</td>
                                <td>{{ mail.createdAt|date("d/m/Y") }}</td>
                                <td>
                                    <a href="{{ path('adminReadMail', {'id': mail.id}) }}">
                                        <img src="{{ asset("/content/images/svg/eye.svg") }}" alt="See more" />
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">Il n'y a aucun mail envoy√© depuis le portfolio</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>

        {% if offset < total_page  %}
            <div class="pagination">
                <div class="first-page">
                    <a href="{{ path("adminContact") }}"><img src="{{ asset("/content/images/svg/double-angle-left.svg") }}" alt={"double-angle-left"} /></a>
                </div>
                
                {% if offset - 1 >= 1  %}
                    <div class="previous-page">
                        <a href="{{ path("adminContactByPage", {'page': (offset - 1)}) }}">{{ offset - 1 }}</a>
                    </div>
                {% endif %}

                <div class="current-page">
                    <span>{{ offset }}</span>
                </div>
                
                {% if offset + 1 <= total_page  %}
                    <div class="next-page">
                        <a href="{{ path("adminContactByPage", {'page': (offset + 1)}) }}">{{ offset + 1 }}</a>
                    </div>
                {% endif %}
                
                <div class="last-page">
                    <a href="{{ path("adminContactByPage", {'page': (total_page)}) }}"><img src="{{ asset("/content/images/svg/double-angle-right.svg") }}" alt={"double-angle-right"} /></a>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}