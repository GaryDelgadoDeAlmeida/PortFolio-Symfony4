{% extends 'baseUser.html.twig' %}

{% block body %}
<section class="login containerBody">
    <div class="container">
        <div class="card">
            <div class="card-header">Login</div>

            <div class="card-content">
                {{ form_start(formLogin, {'action' : path('login'), 'method': 'POST', "attr": {"class": "login-form"}})}}
                    <div class="form-field">
                        {{ form_label(formLogin.email) }}
                        {{ form_widget(formLogin.email) }}
                    </div>
                    
                    <div class="form-field">
                        {{ form_label(formLogin.password) }}
                        {{ form_widget(formLogin.password) }}
                    </div>

                    <div class="form-field">
                        {{ form_widget(formLogin.submit, {'attr': {'class': 'btn btn-outline-green'}}) }}
                    </div>
                {{ form_end(formLogin, {'action' : path('login'), 'method': 'POST'})}}
            </div>
        </div>
    </div>
</section>
{% endblock %}
